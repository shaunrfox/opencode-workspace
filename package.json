{
  "name": "opencode-workspace",
  "version": "1.0.0",
  "description": "Local LLM development environment using OpenCode + Ollama",
  "type": "module",
  "scripts": {
    "start:ollama": "node scripts/start-ollama.js",
    "stop:ollama": "node scripts/stop-ollama.js",
    "check:models": "node scripts/check-models.js",
    "download:models": "node scripts/download-models.js",
    "setup": "npm run check:models && npm run download:models",
    "postinstall": "curl -fsSL https://opencode.ai/install | bash && node scripts/install-ollama.js",
    "test": "node --test test/scripts.test.js",
    "test:watch": "node --test --watch test/scripts.test.js"
  },
  "devDependencies": {
    "chalk": "^5.3.0",
    "execa": "^8.0.1",
    "inquirer": "^12.11.1",
    "ora": "^8.0.1"
  }
}
